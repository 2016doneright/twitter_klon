<h1>Activities#show</h1>
<p>Find me in app/views/activities/show.html.erb</p>
<h3>You are currently signed in as <%= current_user.real_name %> with id of <%= current_user.id %>
<%= link_to current_user.profile_name, get_profile_path(:profile_name => current_user.profile_name) %></h3><br>
<br>
<% @activity.each do |activity| %>
  <div class="activity_<%= activity.id%>">
    <%= link_to activity.owner.profile_name, get_profile_path(activity.owner.profile_name) if activity.owner %>
    <%= render_activity(activity) %>
  </div>
<% end %>
