<!DOCTYPE html>
<html>
<head>
  <title>Twitter</title>
  <%= include_gon %>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  
  <!--google analytics-->
  <script>
    (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
    (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
    m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
    })(window,document,'script','//www.google-analytics.com/analytics.js','ga');
  
    ga('create', 'UA-71745087-5', 'auto');
    ga('send', 'pageview');
  </script>
  
</head>
<body>

<div class="w-nav navbar" data-collapse="medium" data-animation="default" data-duration="400" data-contain="1">
  <div class="w-container">
      <nav class="w-nav-menu" role="navigation">
          <div class="w-nav-link">
            <div class="spinner">
                <div class="sk-chasing-dots">
                  <div class="sk-child sk-dot1"></div>
                  <div class="sk-child sk-dot2"></div>
                </div>
             </div>
          </div>
          <%= link_to "My feed", root_path, class: 'w-nav-link', data: {'no_turbolink': true} %>
          <%= link_to "Sign in as different user(one click)", destroy_user_session_path, class: "w-nav-link", method: :delete %>
          <div class="w-nav-link">You are: <%= link_to root_path do %>
              <%= current_user.real_name %><%= image_tag current_user.avatar.url || "1.jpg", class: "small_avatar" %>
              <% end %>
          </div>
          </div>
      </nav>
  </div>
</div>
    <%= yield %>

<script>
  var ready;
  ready = function() {
    $("body").niceScroll({
      zindex: 9999,
      cursorborder: "0px",
      background: 'gray',
      cursorwidth: '10px'
    });
  }
  
  $(document).ready(ready);
  $(document).on('page:load', ready);
</script>
</body>
</html>
